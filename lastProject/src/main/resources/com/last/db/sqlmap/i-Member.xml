 		<typeAlias alias="str" type="java.lang.String" /> 
<!-- 	<typeAlias alias="int" type="java.lang.Integer"/> -->
	<typeAlias alias="member" type="com.last.common.vo.MemberVo"/>
	<typeAlias alias="calendar" type="com.last.common.vo.CalendarVO"/>
	
	
